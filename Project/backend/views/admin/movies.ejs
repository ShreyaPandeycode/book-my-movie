<h1 class="text-2xl font-bold mb-6">Manage Movies</h1>
<div class="mb-4 flex justify-end">
  <a href="/admin/movies/add" class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 font-semibold">Add Movie</a>
</div>
<table class="min-w-full bg-white rounded shadow">
  <thead>
    <tr>
      <th class="py-2 px-4 border-b">Title</th>
      <th class="py-2 px-4 border-b">Genre</th>
      <th class="py-2 px-4 border-b">Duration</th>
      <th class="py-2 px-4 border-b">Release Date</th>
      <th class="py-2 px-4 border-b">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% if (movies && movies.length > 0) { %>
      <% movies.forEach(function(movie) { %>
        <tr>
          <td class="py-2 px-4 border-b"><%= movie.title %></td>
          <td class="py-2 px-4 border-b"><%= movie.genre %></td>
          <td class="py-2 px-4 border-b"><%= movie.duration %> min</td>
          <td class="py-2 px-4 border-b"><%= movie.releaseDate ? movie.releaseDate.toISOString().slice(0,10) : '' %></td>
          <td class="py-2 px-4 border-b">
            <a href="/admin/movies/<%= movie._id %>/edit" class="text-blue-600 hover:underline mr-2">Edit</a>
            <form action="/admin/movies/<%= movie._id %>/delete" method="POST" class="inline">
              <button type="submit" class="text-red-600 hover:underline">Delete</button>
            </form>
          </td>
        </tr>
      <% }) %>
    <% } else { %>
      <tr><td colspan="5" class="py-4 text-center text-gray-500">No movies found.</td></tr>
    <% } %>
  </tbody>
</table> 