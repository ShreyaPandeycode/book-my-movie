<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Bookings</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100 min-h-screen">
  <nav class="bg-blue-600 p-4 text-white flex justify-between items-center">
    <span class="font-bold text-xl">Admin Panel</span>
    <a href="/admin/logout" class="bg-white text-blue-600 px-4 py-2 rounded hover:bg-gray-100 font-semibold">Logout</a>
  </nav>
  <main class="max-w-5xl mx-auto py-10">
    <h2 class="text-2xl font-bold mb-6">Bookings</h2>
    <table class="w-full bg-white rounded shadow mt-4">
      <thead>
        <tr>
          <th class="p-2">User</th>
          <th class="p-2">Movie</th>
          <th class="p-2">Theater</th>
          <th class="p-2">Seats</th>
          <th class="p-2">Status</th>
        </tr>
      </thead>
      <tbody>
        <% bookings.forEach(function(booking) { %>
          <tr>
            <td class="p-2"><%= booking.user ? booking.user.email : 'N/A' %></td>
            <td class="p-2"><%= booking.movie ? booking.movie.title : 'N/A' %></td>
            <td class="p-2"><%= booking.theater ? booking.theater.name : 'N/A' %></td>
            <td class="p-2">
              <% booking.seats.forEach(function(seat) { %>
                <%= seat.seatNumber %> <br>
              <% }); %>
            </td>
            <td class="p-2"><%= booking.status %></td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  </main>
</body>
</html> 