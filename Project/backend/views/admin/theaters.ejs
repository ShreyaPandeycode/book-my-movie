<h1 class="text-2xl font-bold mb-6">Manage Theaters</h1>
<div class="mb-4 flex justify-end">
  <a href="/admin/theaters/add" class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 font-semibold">Add Theater</a>
</div>
<table class="min-w-full bg-white rounded shadow">
  <thead>
    <tr>
      <th class="py-2 px-4 border-b">Name</th>
      <th class="py-2 px-4 border-b">Location</th>
      <th class="py-2 px-4 border-b">City</th>
      <th class="py-2 px-4 border-b">Screens</th>
      <th class="py-2 px-4 border-b">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% if (theaters && theaters.length > 0) { %>
      <% theaters.forEach(function(theater) { %>
        <tr>
          <td class="py-2 px-4 border-b"><%= theater.name %></td>
          <td class="py-2 px-4 border-b"><%= theater.location %></td>
          <td class="py-2 px-4 border-b"><%= theater.city %></td>
          <td class="py-2 px-4 border-b"><%= theater.totalScreens %></td>
          <td class="py-2 px-4 border-b">
            <a href="/admin/theaters/<%= theater._id %>/edit" class="text-blue-600 hover:underline mr-2">Edit</a>
            <form action="/admin/theaters/<%= theater._id %>/delete" method="POST" class="inline">
              <button type="submit" class="text-red-600 hover:underline">Delete</button>
            </form>
          </td>
        </tr>
      <% }) %>
    <% } else { %>
      <tr><td colspan="5" class="py-4 text-center text-gray-500">No theaters found.</td></tr>
    <% } %>
  </tbody>
</table> 