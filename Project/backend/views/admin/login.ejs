<div class="w-full max-w-md mx-auto bg-white rounded-lg shadow-lg p-8 mt-10">
  <h2 class="text-2xl font-bold text-center mb-6">Admin Login</h2>
  <% if (error) { %>
    <div class="mb-4 text-red-600 text-center"><%= error %></div>
  <% } %>
  <form action="/admin/login" method="POST" class="space-y-6">
    <div>
      <label class="block text-gray-700">Username</label>
      <input type="text" name="username" required class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
    </div>
    <div>
      <label class="block text-gray-700">Password</label>
      <input type="password" name="password" required class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
    </div>
    <button type="submit" class="w-full bg-blue-600 text-white py-2 rounded-lg font-semibold hover:bg-blue-700 transition">Login</button>
  </form>
</div> 