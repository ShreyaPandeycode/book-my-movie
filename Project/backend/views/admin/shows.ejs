<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Manage Shows</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100 min-h-screen">
  <nav class="bg-blue-600 p-4 text-white flex justify-between items-center">
    <span class="font-bold text-xl">Admin Panel</span>
    <a href="/admin/logout" class="bg-white text-blue-600 px-4 py-2 rounded hover:bg-gray-100 font-semibold">Logout</a>
  </nav>
  <main class="max-w-5xl mx-auto py-10">
    <h2 class="text-2xl font-bold mb-6">Manage Shows</h2>
    <a href="/admin/shows/add" class="bg-blue-600 text-white px-4 py-2 rounded mb-4 inline-block">Add Show</a>
    <table class="w-full bg-white rounded shadow mt-4">
      <thead>
        <tr>
          <th class="p-2">Movie</th>
          <th class="p-2">Theater</th>
          <th class="p-2">Date</th>
          <th class="p-2">Time</th>
          <th class="p-2">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% shows.forEach(function(show) { %>
          <tr>
            <td class="p-2"><%= show.movie.title %></td>
            <td class="p-2"><%= show.theater.name %></td>
            <td class="p-2"><%= show.date.toISOString().slice(0,10) %></td>
            <td class="p-2"><%= show.time %></td>
            <td class="p-2">
              <a href="/admin/shows/<%= show._id %>/edit" class="text-blue-600 hover:underline">Edit</a>
              <form method="POST" action="/admin/shows/<%= show._id %>/delete" style="display:inline;">
                <button type="submit" class="text-red-600 ml-2">Delete</button>
              </form>
            </td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  </main>
</body>
</html> 