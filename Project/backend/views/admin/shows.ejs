<h1 class="text-2xl font-bold mb-6">Manage Shows</h1>
<div class="mb-4 flex justify-end">
  <a href="/admin/shows/add" class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 font-semibold">Add Show</a>
</div>
<table class="min-w-full bg-white rounded shadow">
  <thead>
    <tr>
      <th class="py-2 px-4 border-b">Movie</th>
      <th class="py-2 px-4 border-b">Theater</th>
      <th class="py-2 px-4 border-b">Screen</th>
      <th class="py-2 px-4 border-b">Date</th>
      <th class="py-2 px-4 border-b">Time</th>
      <th class="py-2 px-4 border-b">Price</th>
      <th class="py-2 px-4 border-b">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% if (shows && shows.length > 0) { %>
      <% shows.forEach(function(show) { %>
        <tr>
          <td class="py-2 px-4 border-b"><%= show.movie && show.movie.title %></td>
          <td class="py-2 px-4 border-b"><%= show.theater && show.theater.name %></td>
          <td class="py-2 px-4 border-b"><%= show.screenNumber %></td>
          <td class="py-2 px-4 border-b"><%= show.date ? show.date.toISOString().slice(0,10) : '' %></td>
          <td class="py-2 px-4 border-b"><%= show.time %></td>
          <td class="py-2 px-4 border-b">â‚¹<%= show.price %></td>
          <td class="py-2 px-4 border-b">
            <a href="/admin/shows/<%= show._id %>/edit" class="text-blue-600 hover:underline mr-2">Edit</a>
            <form action="/admin/shows/<%= show._id %>/delete" method="POST" class="inline">
              <button type="submit" class="text-red-600 hover:underline">Delete</button>
            </form>
          </td>
        </tr>
      <% }) %>
    <% } else { %>
      <tr><td colspan="7" class="py-4 text-center text-gray-500">No shows found.</td></tr>
    <% } %>
  </tbody>
</table> 